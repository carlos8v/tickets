{
  "name": "tickets",
  "version": "0.0.0",
  "description": "",
  "main": "dist/infra/http/server.js",
  "scripts": {
    "start": "node dist/infra/http/server.js",
    "dev": "npm run dev:server & npm run dev:front",
    "dev:server": "tsx watch ./src/infra/http/server.ts",
    "dev:front": "vite build --watch",
    "prebuild": "rimraf dist/",
    "build": "npm run build:server && npm run build:front",
    "build:server": "tsc -p tsconfig-build.json",
    "build:front": "vite build",
    "postbuild": "tscpaths -p tsconfig-build.json -s ./src -o ./dist"
  },
  "author": "Carlos Souza <carlos.pessoal@hotmail.com",
  "license": "MIT",
  "prisma": {
    "schema": "src/infra/db/prisma/schema.prisma"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.2",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.21",
    "prisma": "^4.11.0",
    "rimraf": "^4.1.3",
    "tailwindcss": "^3.2.7",
    "tsconfig-paths": "^3.14.2",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5",
    "vite": "^4.2.1",
    "vite-plugin-solid": "^2.6.1"
  },
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "@solidjs/router": "^0.8.1",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "solid-js": "^1.6.15",
    "zod": "^3.20.6"
  }
}
