{
  "name": "tickets",
  "version": "0.0.0",
  "description": "",
  "main": "dist/infra/http/server.js",
  "scripts": {
    "start": "node dist/infra/http/server.js",
    "dev": "npm run dev:server & npm run dev:css",
    "dev:server": "tsx watch ./src/infra/http/server.ts",
    "dev:css": "tailwindcss -i ./static/styles/tailwind.css -o ./static/styles/main.css --watch",
    "prebuild": "rimraf dist/",
    "build": "npm run build:server && && npm run build:client && npm run build:css",
    "build:server": "tsc -p tsconfig-build.json",
    "build:client": "rollup -c --bundleConfigAsCjs",
    "build:css": "tailwindcss -i ./static/styles/tailwind.css -o ./static/styles/main.css",
    "postbuild": "tscpaths -p tsconfig-build.json -s ./src -o ./dist"
  },
  "author": "Carlos Souza <carlos.pessoal@hotmail.com",
  "license": "MIT",
  "prisma": {
    "schema": "src/infra/db/prisma/schema.prisma"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/node": "^18.14.2",
    "prisma": "^4.11.0",
    "rimraf": "^4.1.3",
    "rollup": "^3.18.0",
    "tailwindcss": "^3.2.7",
    "tsconfig-paths": "^3.14.2",
    "tslib": "^2.5.0",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "bcrypt": "^5.1.0",
    "cookie-parser": "^1.4.6",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "rpc-websockets": "^7.5.1",
    "zod": "^3.20.6"
  }
}
