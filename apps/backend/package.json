    "prisma": "^4.11.0",
    "rimraf": "^4.1.3",
    "tscpaths": "^0.0.9",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "@trpc/server": "^10.18.0",
